  "main": "app.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run prebuild && tsc --project tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./dist/app.js",
    "migrate:dev": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "seed": "prisma db seed",
    "dev": "cross-env NODE_ENV=development tsx watch --env-file .env src/app.ts",
    "start": "npm run migrate:prod && npm run seed && node dist/index.js",
    "test": "jest"
  },
