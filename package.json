    "cross-env": "^10.0.0",
    "jest": "^29.6.1",
    "prisma": "^4.16.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
